<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/TopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imagem_perfil_empresa_feed_users"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="5dp"
            app:layout_constraintBottom_toBottomOf="@id/background_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nome_empresa_feed_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:text="Pacha Ofir"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imagem_evento_feed_users"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/TopBar"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/backgrounds/scenic"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagem_evento_feed_users"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_like" />

    <TextView
        android:id="@+id/Likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagem_evento_feed_users"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="6dp"
        android:padding="5dp"
        android:text="likes"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagem_evento_feed_users"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="78dp"
        android:background="@drawable/ic_comment" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagem_evento_feed_users"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/ic_share" />

    <TextView
        android:id="@+id/descricao_evento_feed_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dahdhahdaadhadiad dadjad ajfhadua asufhsa"
        android:layout_below="@id/Likes"
        android:layout_margin="6dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="11sp" />


</RelativeLayout>