<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/latest_profile_image_view"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/latest_username_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        app:layout_constraintStart_toEndOf="@+id/latest_profile_image_view"
        app:layout_constraintTop_toTopOf="@+id/latest_profile_image_view"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/latest_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest Message"
        app:layout_constraintBottom_toBottomOf="@+id/latest_profile_image_view"
        app:layout_constraintStart_toEndOf="@+id/latest_profile_image_view"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:textSize="16sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>